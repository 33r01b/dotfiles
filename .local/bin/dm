#!/bin/bash

# catch first arguments with $1
case "$1" in
 -e)
  xrandr --output eDP1 --auto --output DP1 --off --output HDMI2 --off
  ;;
 -d)
  xrandr --output DP1 --auto --output eDP1 --off --output HDMI2 --off
  ;;
 -ed)
  xrandr --output DP1 --mode 3840x2160 && xrandr --output eDP1 --auto --output DP1 --right-of eDP1 --output HDMI2 --off
  ;;
 -eh)
  xrandr --output HDMI2 --set audio on --mode 1280x720 && xrandr --output eDP1 --auto --output HDMI2 --above eDP1 --output DP1 --off
  ;;
 *)
  # else
  echo -e "Available commands: \n"
  echo -e "-d   single work monitor"
  echo -e "-e   single laptop monitor"
  echo -e "-ed  multiple laptop & work monitors"
  echo -e "-eh  multiple laptop & home monitors"
  echo -e "\n"

  xrandr | grep -A1 'DP\|eDP\|HDMI'
  ;;
esac
